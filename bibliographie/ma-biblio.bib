@article{barthe-delanoeEventdrivenAgilityInteroperability2014,
  title    = {Event-Driven Agility of Interoperability during the {{Run}}-Time of Collaborative Processes},
  author   = {{Barthe-Delano{\"e}}, Anne-Marie and Truptil, S{\'e}bastien and B{\'e}naben, Fr{\'e}d{\'e}rick and Pingaud, Herv{\'e}},
