@article{chaturvediDistinguishingFactsOpinions2018,
  title     = {Distinguishing between Facts and Opinions for Sentiment Analysis: {{Survey}} and Challenges},
  author    = {Chaturvedi, I. and Cambria, E. and Welsch, R.E. and Herrera, F.},
  year      = {2018},
