  title     = {Epidemiology from {{Tweets}}: {{Estimating Misuse}} of {{Prescription Opioids}} in the {{USA}} from {{Social Media}}},
  author    = {Chary, M. and Genes, N. and {Giraud-Carrier}, C. and Hanson, C. and Nelson, L.S. and Manini, A.F.},
