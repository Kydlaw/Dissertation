}

@article{rietjensCoordinatingHumanitarianOperations2007,
  title     = {Co-Ordinating Humanitarian Operations in Peace Support Missions},
  author    = {Rietjens, S.J.H. and Voordijk, H. and De Boer, S.J.},
  year      = {2007},
  journal   = {Disaster Prevention and Management: An International Journal},
  volume    = {16},
