  title     = {A Classification of User-Generated Content into Consumer Decision Journey Stages},
  author    = {V{\'a}zquez, S. and {Mu{\~n}oz-Garc{\'i}a}, T. and Campanella, I. and Poch, M. and Fisas, B. and Bel, N. and Andreu, G.},
  year      = {2014},
  journal   = {Neural Networks},
